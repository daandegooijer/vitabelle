---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import type { SEO } from '../utils/types'

const { pageTitle, metaDescription } = Astro.props as SEO
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={metaDescription} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="font-poppins antialiased">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	/* Register your custom font family and tell the browser where to find it. */
	@font-face {
		font-family: 'Poppins';
		src: url('/fonts/Poppins-Regular.woff2') format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Poppins Bold';
		src: url('/fonts/Poppins-Bold.woff2') format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Poppins Light';
		src: url('/fonts/Poppins-Light.woff2') format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	:root {
		--color-primary-50: 255 254 253;
		--color-primary-100: 255 252 252;
		--color-primary-200: 255 248 247;
		--color-primary-300: 255 243 242;
		--color-primary-400: 255 234 232;
		--color-primary-500: 255 225 222;
		--color-primary-600: 230 203 200;
		--color-primary-700: 153 135 133;
		--color-primary-800: 115 101 100;
		--color-primary-900: 77 68 67;
		--color-text: 47 44 35;
		--color-secondary-50: 253 252 253;
		--color-secondary-100: 250 249 250;
		--color-secondary-200: 244 240 244;
		--color-secondary-300: 237 231 237;
		--color-secondary-400: 223 214 223;
		--color-secondary-500: 209 196 209;
		--color-secondary-600: 188 176 188;
		--color-secondary-700: 125 118 125;
		--color-secondary-800: 94 88 94;
		--color-secondary-900: 63 59 63;
	}
	.font-bold {
		font-family: 'Poppins Bold', sans-serif;
	}

	h1 {
		@apply text-4xl;
	}

	h2 {
		@apply text-3xl;
	}

	h3 {
		@apply text-2xl;
	}

	.prose {
		font-family: 'Poppins Light', sans-serif;
	}
</style>
