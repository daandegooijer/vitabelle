---
import { config } from '../../config'
import Blocks from '../components/Blocks.astro'
import Hero from '../components/Hero.astro'
import Layout from '../layouts/Layout.astro'
import { destructPage } from '../utils/wordpress'

const res = await fetch(`${config.site.wp_url}${config.endpoints.pages}/27?acf_format=standard`)
const page = destructPage(await res.json())
---

<Layout {...page.seo}>
	<Hero {...page.hero} />
	<Blocks {...page.blocks} />
</Layout>

